<h1>These are all your Friends</h1>

<table class="table">
  <thead>
    <tr>
      <!-- <th>ID</th> -->
      <!-- <th>Your account id</th> -->
      <!-- <th>Friend's account id</th> -->
      <th>Photo</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <!-- <td><%#= friend.id %></td> -->
        <!-- <td><%#= friend.account_id %></td> -->
        <!-- <td><%#= friend.friend_account_id %></td> -->
        <td><%= image_tag friend.photo, width: 100 %></td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'View Profile', friend, class: 'btn btn-md btn-primary' %></td>
        <!-- <td><%#= link_to 'Edit', edit_friend_path(friend) %></td> -->
        <td><%= link_to 'Remove Friend', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-md btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

